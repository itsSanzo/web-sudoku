<html>
<head>
  <title>Sudoku Game</title>
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>

<body>

<h1>Space Sudoku</h1>
<div id="flash">
  <%= flash[:notice] %>
</div>
<div id="sudoku">
<form action="/" method="post">
  <% 3.times do |row| %>
    <div class='row'>
      <% 3.times do |box| %>
        <div class="box">
        <% 3.times do |cell_row| %>
          <div class="cell-row">
            <% 3.times do |cell| %>
              <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
            <% end %>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
  <% end %>



  <!-- New game:<br>
  <button>Easy</button>
  <button>Hard</button> -->
  <button type="submit">Check solution</button>
</form>
<form action="/new" method="post">
<button type="submit">New game</button>
</form>
</div>

</body>
</html>